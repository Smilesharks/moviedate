body
  font-family: 'Anonymous Pro', monospace;
  background-color $negro
  color #fff
  h1, h2, h3, h4, .h4
    font-family: 'Poppins', sans-serif;
    
.bg-dark
  background-color $negro !important
    
.feather
  width: 16px
  height: 16px
  vertical-align: text-bottom

// Sidebar

.sidebar
  position: fixed
  top: 0
  bottom: 0
  left: 0
  z-index: 100
  // Behind the navbar
  padding: 78px 0 0
  // Height of navbar
  box-shadow: inset -1px 0 0 rgba(0, 0, 0, 0.1)

.sidebar-sticky
  position: relative
  top: 0
  height: calc(100vh - 48px)
  padding-top: .5rem
  overflow-x: hidden
  overflow-y: auto
  // Scrollable contents if viewport is shorter than content.

@supports (position: -webkit-sticky) or (position: sticky)
  .sidebar-sticky
    position: -webkit-sticky
    position: sticky

.sidebar .nav-link
  font-weight: 500
  // color: #333
  .feather
    margin-right: 4px
    color: #999
  &.active
    color: $primary
  &:hover .feather, &.active .feather
    color: inherit
a
  &.nav-link
    color #fff

.sidebar-heading
  font-size: .75rem
  text-transform: uppercase

.role
  padding-top: 213px
  // Space for fixed navbar

@media (min-width: 768px)
  .role
    padding-top: 88px
    // Space for fixed navbar

.btn-primary, .primary
  background-color $primary
  border none
.btn-secondary .secondary
  background-color $secondary
  border none
.btn-primary
  &:hover
    background-color $ss
    color $negro !important

.poster
  &.card
    border none
    position: relative;
    // background-color red
    background-color transparent
  .poster__grad
    background-image: linear-gradient(top, rgba(0,0,0,0) 0%,rgba(0,0,0,0.9) 100%);
    width 100%
    height 100%
    position absolute
    z-index -98
  .poster__img
    transition .3s
    z-index -99
    height 400px
    background-size cover
    border-radius 5px
  &:hover
    .poster__img
      transform scale(0.99);
      transition .3s
      filter: grayscale(0) !important;
  .poster__info
    position absolute
    bottom 0
  .poster__footer
    // img
    //   width 90%
  .status
    position absolute
    text-transform uppercase
    text-align center
    color $negro
    font-weight bolder
    letter-spacing 0.1em
    .primary
      border-radius 5px
    .clock
      .hours, .minutes, .days
        display inline
      * div
        margin-right 2px
